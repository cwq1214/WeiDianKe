<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_translation"
    android:orientation="vertical" 
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg_dra"
        android:orientation="vertical" 
        android:layout_margin="30dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="请选择会员类型"
            android:textColor="@color/new_black"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_remove"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:id="@+id/listview"></ListView>

            <TextView
                android:id="@+id/tv_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付宝付款"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btn_red_angle_large"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v信付款"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btn_green_angle_large"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>